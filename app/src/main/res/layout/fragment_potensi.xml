<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.potensi.fragment.PotensiFragment"
    android:background="#ECF0F5"
    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/potensiCat_1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:text="Kecamatan"
            android:onClick="potensiCategory_1"
            android:textSize="8dp"
            android:fontFamily="@font/fontinter"
            android:backgroundTint="@color/black"
            />
        <Button
            android:id="@+id/potensiCat_2"
            android:layout_width="90dp"
            android:layout_marginRight="8dp"
            android:layout_height="wrap_content"
            android:text="Pariwisata"
            android:textSize="8dp"
            android:fontFamily="@font/fontinter"
            android:backgroundTint="@color/black"
            />

        <Button
            android:id="@+id/potensiCat_3"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Sejarah"
            android:textSize="8dp"
            android:fontFamily="@font/fontinter"
            android:backgroundTint="@color/black"
            />
        <Button
            android:id="@+id/potensiAll"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="All"
            android:textSize="8dp"
            android:fontFamily="@font/fontinter"
            android:backgroundTint="@color/black"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:id="@+id/potensi_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/list_potensi" />
</LinearLayout>